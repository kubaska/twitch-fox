{
    "manifest_version": 2,
    "name": "Twitch Fox",
    "description": "(Fork) Quickly browse Twitch. Receive notifications for channels and games. Many customizable features.",
    "version": "5.0.0beta1",
    "incognito": "not_allowed",

    "applications": {
        "gecko": {
            "id": "{d4a70149-47b3-42dd-8849-19ac63a7047c}"
        }
    },

    "icons": {
        "48": "assets/twitch-fox.svg",
        "96": "assets/twitch-fox.svg"
    },

    "permissions": [
        "notifications",
        "contextMenus",
        "storage",
        "alarms",
        "tabs",
        "https://hunter5000.github.io/*"
    ],

    "background": {
        "scripts": ["vendor.js", "background.js"]
    },

    "browser_action": {
        "browser_style": false,
        "default_icon": "assets/twitch-fox.svg",
        "default_title": "Twitch Fox",
        "default_popup": "html/popup.html"
    },

    "options_ui": {
        "page": "html/options.html",
        "browser_style": true
    }
}
